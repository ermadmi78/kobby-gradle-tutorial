directive @resolve on FIELD_DEFINITION

scalar Long

type Query {
    film(id: Long!): Film
    films: [Film!]!
}

type Mutation {
    createFilm(title: String!): Film!
}

type Subscription {
    filmCreated: Film!
}

type Film {
    id: Long!
    title: String!
    actors: [Actor!]! @resolve
}

type Actor {
    id: Long!
    firstName: String!
    lastName: String
}